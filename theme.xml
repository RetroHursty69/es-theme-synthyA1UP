<?xml version="1.0" encoding="UTF-8"?>
<theme>
   <formatVersion>4</formatVersion>

<!--
Carousel wheel and main menu background
-->


<feature supported="carousel">
   <view name="system">
      <carousel name="systemcarousel">
        <zIndex>4</zIndex>	      
        <type>horizontal</type>
        <pos>0.0 -0.2</pos>
        <size>1 1</size>
        <logoScale>1</logoScale>
        <logoSize>0.53 0.53</logoSize>
        <color>00000000</color>
        <maxLogoCount>3</maxLogoCount>
		<logoAlignment>bottom</logoAlignment>        
      </carousel> 
      <image name="background" extra="true">
         <origin>0 0</origin>
         <pos>0 0</pos>
         <size>1 1</size>
         <zIndex>3</zIndex>                 
         <path>./_inc/images/background.png</path>
      </image>  	  
      <text name="systemInfo">     
         <pos>0.0 0.862</pos>
         <backgroundColor>00000000</backgroundColor>
         <color>fa1ed4</color>
         <fontPath>./_inc/fonts/LOWRBI__.TTF</fontPath>
	     <fontSize>0.045</fontSize>
         <zIndex>6</zIndex>	     
      </text>            
   </view>
</feature>


<!--
On Screen help
-->

   <view name="system">
      <helpsystem name="help">
         <fontPath>./_inc/fonts/OpenSans-Bold.ttf</fontPath>
         <fontSize>0.025</fontSize>     
         <pos>1.24 1.96</pos>      
         <textColor>b3d9ff</textColor>
         <iconColor>b3d9ff</iconColor>
      </helpsystem>
   </view>  
  
